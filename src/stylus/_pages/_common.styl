// *common（共通部分）


// #header
#tp-header
	+mq()
		width 100%
		padding 0

		.header-logo
			position relative
			margin 0
			padding 0
			z-index 1000
			animation none
			a
				width 30px
				padding 12px 17px
				background linear-gradient(to bottom,rgba(150,234,16, .9),rgba(79,220,220, .9))


		.global-nav
			width 55px
			height 55px
			margin 0 0 0 20px
			#tp-menu
				display none
				position absolute
				top 0
				left 0
				width 100%
				height 100vh
				padding-top 35%
				background rgba(255,255,255, .8)
				transition 0.3s
				&.open
					display block

				li
					position relative
					margin-bottom 40px
					font-weight bold
					text-align left
					&:last-child
						margin-bottom 0
					a
						width 100%
						margin 0
						padding 10px
						font-size 1.4rem
						color #000
					.under-link
						display block
						a
							position relative
							margin-top 0
							font-size 1.2rem
							color: #828282
							&::before
								border-left: 2px solid #828282
								border-bottom: 2px solid #828282
				.menu-txt
					padding-left 15%
				.sns
					display table
					width 45px
					height 45px
					text-align center
					background none
					border solid 1px #99cc00
					border-radius 30px
					a
						display table-cell
						width 18px
						height 18px
						margin 0 auto
						vertical-align middle
						img
							width auto
							height 100%
				.fb, .twit
					float left
					margin-top -10px
				.fb
					margin -10px 20px 0 17%

			.btn-menu::before, .btn-menu::after
				content ''
				display block
				position absolute
				width 30px
				height 3px
				background #fff
				transition 0.2s
			.btn-menu
				display block
				position relative
				width 100%
				height 100%
				&::before
					top 17px
				&::after
					bottom 17px
					width 15px
				&.open
					&::before
						background #009944
						transform rotate(-135deg) translate(-7px, -5px)
					&::after
						width 30px
						background #009944
						transform rotate(135deg) translate(-7px, 6px)
				&.sticky
					&::before
						background #009944
					&::after
						background #009944
				span
					display block
					width 23px
					height 3px
					background #fff
					transition 0.2s
					&.open
						display none
					&.sticky
						background #009944

// #under-header
.under-header
	+mq()
		width 100%
		padding 0
		img
			width 100%
		.header-logo
			width 85px
			margin 0 0 0 15px
			padding 16px 0 15px

		.global-nav
			#menu
				display none
				justify-content center
				align-items flex-start
				flex-wrap wrap
				position fixed
				top 0
				left 0
				width 100%
				height 100vh
				margin 0
				background rgba(255,255,255, .8)
				transition 0.2s
				z-index 1000
				&.open
					display flex

				.btn
					display block
					left auto
					width 35%
					height auto
					margin-top 15%
					span
						display block
						width 100px
						height 40px
						margin 0 auto
						text-align center
						a
							display inline-block
							margin-top 4px
							font-size 1rem
							color #fff
				.bt-contact
					margin-right 20px
				.menu-txt
					width 100%
					padding-left 15%
					font-weight bold
					text-align left
					a
						font-size 1.3rem
						color #000
					.under-link
						display block
						position relative
						a
							position relative
				.sns
					width 20%
					span
						display block
						width 40px
						height 40px
						margin 0 auto
						background none
						border solid 1px #99cc00
						border-radius 30px
						a
							width 18px
							height 18px
							margin 2px auto 0
							vertical-align middle
							img
								width auto
								height 100%
				.fb
					margin-right 0
			.btn-menu::before, .btn-menu::after
				content ''
				display block
				position absolute
				right 0
				left 0
				width 30px
				height 3px
				margin 0 auto
				transforrm translate(-50%, -50%)
				background #fff
				transition 0.2s
			.btn-menu
				display block
				position fixed
				top 0
				right 0
				width 60px
				height 60px
				background linear-gradient(to bottom,rgba(150,234,16, .9),rgba(79,220,220, .9))
				z-index 1100
				transition 0.2s
				&::before
					top 20px
				&::after
					bottom 19px
				&.open
					background none
					&::before
						background #009944
						transform rotate(-135deg) translate(-7px, -7px)
					&::after
						background #009944
						transform rotate(135deg) translate(-5px, 6px)
				span
					display block
					width 30px
					height 3px
					margin 0 auto
					background #fff
					transition 0.2s
					&.open
						display none

.sect-bg
	+mq()
		padding 60px 0

// #underPage main-visual
.lower-visual
	+mq()
		.lv-img
			position relative
			width 100%
			z-index 900
		.lv-tri
			display none
		.lv-gray
			display none
		.lv-text
			left 15px
			bottom 30px
			z-index 910
			.lv-tit
				font-size 2rem
				letter-spacing 0.5rem
			.lv-cap
				font-size 1.2rem
				margin 10px -10px 0 0


// #underPage link-area
.pagelink-wrap
	+mq()
		width 100%
		margin 40px 0
		flex-wrap wrap
		.pagelink
			width 60%
			margin-right 0
			&::after
				height 1px
				margin 8px 0 20px
				padding-right 0

			p
				a
					font-size 1.3rem
					&::after
						top 0
						right 5px
						width 4px
						height 4px

// #table
.content-wrap
	+mq()
		.comp-table
			margin 30px 0 20px
			background none
			&::before
					content ''
					display block
					width 100%
					height 1px
					margin-bottom 10px
					background linear-gradient(to right, #00bbcc, #99cc00)
			tr
				display flex
				flex-wrap wrap
				padding 12px 0
				&::after
					content ''
					display block
					width 100%
					height 1px
					margin-top 22px
					background linear-gradient(to right, #00bbcc, #99cc00)
				th
					width 100%
					padding 0
					font-size 1.3rem
				td
					width 100%
					margin-top 10px
					padding 0
					font-size 1.2rem
					line-height 1.3


// *footer
.footer
	+mq()
		.footer-corp
			flex-wrap wrap
			width 100%
			padding 20px 0
			.footer-logo
				display block
				position relative
				width 90%
				margin 10px auto 0
				img
					width 110px
				p
					position absolute
					top 13px
					left auto
					right 0
			.det-btn
				order -1
				margin 0 auto
				width 200px
				height 56px
				border-radius 10px
				.btn-inner
					width 196px
					height 52px
					border-radius 8px
					a
						margin-top -3px

			.top-back
				top -25px
				right 0
				left 0
				margin 0 auto
				width 80px

		#copyrights
			font-size 1.2rem