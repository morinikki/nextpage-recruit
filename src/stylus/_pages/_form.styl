// *form


#form
	+mq()
		width 100%
		input
			// width 100%
		.contact-info
			margin 50px auto
		.contact-wrap
			width 100%
			.content-wrap
				width 80%
				padding 20px
				.content-catch
					padding-top 30px
				.form-signal
					width 100%
					margin 30px auto 20px
					ul
						justify-content center
						width 100%
						&::before
							top 28px
							width 260px
						li
							width 40px
							height 40px
							padding 10px
							border-radius 30px
							p
								margin 12px auto 0
				.contact-form
					display block
					width 100%
					form
						table
							display block
							width 260px
							margin 0 auto
							tr
								display flex
								flex-wrap wrap
								width 260px
								margin-top 40px
								th
									flex-basis 100%
									padding 0
								td
									flex-basis 260px
									margin-top 10px
									padding 0
								#td-100
									input
										display inline-block
										width 260px
									small
										display inline-block
										margin 10px 0 0 0
								#checkbox-td
									.lavel-check
										p
											.checkbox
												width 20px
												height 20px
												line-height 2px
												box-sizing border-box