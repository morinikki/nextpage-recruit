// #（経験できること・学べること）
#learn
	.sp-br
		display none
	+mq()
		width 100%
		.content-wrap
			width 80%
			padding 20px

			.content-catch
				h3
					margin-top 30px
					font-size 2rem
					line-height 1.2
					.sp-br
						display block
				p
					width 90%
					margin 0 auto
					font-size 1.2rem
					line-height 1.2

			.comp-table
				tr
					padding 15px 0 12px 0


