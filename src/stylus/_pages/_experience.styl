// experience（インターンシップ体験談）


#experience
	+mq()
		padding 0
		.contact-info
			margin 0
			p
				font-size 1.2rem
		.exp-wrap
			width 100%
			margin 0
			padding 80px 0
			.exp-content
				width 80%
				padding 20px
				margin-bottom 60px
				&:last-child
					margin-bottom 0
				.exp-col
					flex-wrap wrap
					.exp-info
						width 100%
						.exp-img
							width 100%
							&::before
								width 100%
								height 100%
								top 10px
								left 10px
							img
								width 100%
						p
							margin 0
							font-size 1.2rem
							line-heigt 1.4
							em
								margin 10px 0 0
								font-size 1.4rem
							.first
								margin-top 30px
					.exp-text
						width 100%
						.ex-name
							margin 30px 0
							font-size 1.8rem
							color: #009944;
						h4
							font-size 2rem
							line-height 1.4
							&::after
								margin 10px 0 20px
						.exp-inner
							p
								font-size 1.2rem
								line-height 1.6