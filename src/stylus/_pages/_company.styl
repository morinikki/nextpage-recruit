// company（会社情報）


#comp-intro
	+mq()
		display flex
		flex-wrap wrap
		width 100%
		padding-bottom 80px
		video
			width 100%
		#production
			margin-left 20px
			font-size 3rem
			&::after
				left 0
				bottom -10px
				width 100%
		.comp-wrap
			flex-wrap wrap
			padding 0 20px
			.comp-img
				width 85%
				margin 0 auto
				padding 0
				.comp-kei
					&::after
						width 100%
						height 100%
						top 10px
						left auto
						right 10px
			.intro-text
				width 100%
				margin-top 50px
				h3
					font-size 1.4rem
					line-height 2
					&::after
						bottom -30px
				p
					margin 60px 0 0
					font-size 1.2rem
					line-height 1.8
		.shape
			right 10px
			bottom 50px
			width 30px


.comp-adv
	+mq()
		width 100%
		.content-wrap
			width 80%
			padding 20px
			.content-catch
				margin-top 30px
				h3
					margin 0
					font-size 2rem
					line-height 1.4
					.sp-br
						display block
			.comp-table
				margin 20px 0 0
				padding-bottom 20px
				tr
					th
						width 100%
						font-size 1.8rem
						span
							&::after
								top -7px
								left -12px
								width 35px
								height 35px
						.comp-icon
							height 30%
							margin 30px auto 0
							img
								width auto
								heigt 100%
					td
						width 100%
						margin 20px 0 0 30px


#comp-data
	+mq()
		width 100%
		margin 0
		padding 0 0 80px
		background #f6f6f6
		.content-wrap
			width 80%
			padding 20px
			background #fff
			.content-catch
				margin-top 30px
				h3
					margin 0
					font-size 2.2rem
			.data-col
				margin-top 30px
				li
					display flex
					flex-wrap wrap
					padding 30px 0 25px
					font-size 1.4rem
					&::before
						left 0
					h4
						width 100%
						font-size 1.4rem
					p
						width 100%
						margin-top 10px
						font-size 1.3rem
					.data-inner
						margin-top 20px
						.list-item
							width 100%
							padding 0
							margin-bottom 20px
							&:last-child
								margin-bottom 0
